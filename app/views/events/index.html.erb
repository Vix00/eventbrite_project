<% content_for :title, "Évènements" %>
<hr>
<% @events.each do |event| %>
  <div class="row">
    <div class="col-lg-6"><br>
      <h2><strong><em> <%= event.title %> <i class="fab fa-angellist"></i></em></strong></h2>
       <% if event.description.to_s.length > 80 %> 
        <p class="card-text"> <%= event.description.to_s[0..80] + ' [...]' %> </p>
      <% else %>
        <p class="card-text"> <%= event.description.to_s[0..80] %> </p>
      <% end %>
      <ul>
        <strong><%= event.start_date.strftime("%Y-%m-%d") %></strong><br>
        <a><%= event.presence.count %> participants<a><br>
        <a>Prix : <%= event.price %> €<a><br><br>
        <a>Organisateur : <%= event.administrator.firstname%> <%= event.administrator.lastname %><a><br>
        <a>Contact : <%= event.administrator.email %><a><br>
      </ul>
      <a>Paris</a>
      <p>Rue <%= event.location %></p>
      <a class="btn btn-info" href="<%= event_path(event.id) %>">Voir l'évènement</a>
      
    </div>
    <div class="col-lg-6">
      <% if event.image.attached?%>
        <%= image_tag event.image, alt: 'image', size: "500" %>
      <% end %>
    </div>
  </div><hr>
<%end%>